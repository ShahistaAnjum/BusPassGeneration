<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonthlyPass"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter the Aadhar Number"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/payment_edittext">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/monthlyPassAadhar"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/payment_edittext"
                    android:drawablePadding="8dp"
                    android:hint="Aadhar Number"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Search"
                    android:id="@+id/monthlyPassSearchButton"
                    android:textSize="15sp"
                    android:backgroundTint="@color/black"
                    android:layout_marginLeft="10dp"
                    app:cornerRadius="20dp"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Pass"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold">

    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:text="Aadhar No:"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="252dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:paddingLeft="8dp"
                    android:id="@+id/mothlyPassAadharNo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:text="Full Name:"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="249dp"
                    android:layout_height="40dp"
                    android:textSize="20sp"
                    android:paddingLeft="8dp"
                    android:id="@+id/mothlyPassName"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:paddingLeft="8dp"
                    android:text="Month:"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="251dp"
                    android:layout_height="35dp"
                    android:textSize="20sp"
                    android:paddingLeft="8dp"
                    android:id="@+id/monthlyPassMonth"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="52dp"
                    android:paddingLeft="8dp"
                    android:text="Year:"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="251dp"
                    android:layout_height="42dp"
                    android:textSize="20sp"
                    android:paddingLeft="8dp"
                    android:id="@+id/monthlyPassYear"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>