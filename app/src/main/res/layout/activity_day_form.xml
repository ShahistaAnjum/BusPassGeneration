<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset"
    android:scrollbarSize="10dp"
    android:scrollbarFadeDuration="10"
    android:nestedScrollingEnabled="true"
    tools:context=".DayForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Apply Daily Pass"
            android:textSize="35sp"
            android:paddingLeft="35dp"
            android:paddingRight="10dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Application Details"
            android:textSize="20sp"
            android:paddingLeft="80dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Aadhar No:"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/DailyAadharNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Aadhar Number"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="text"
            android:textSize="18sp">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Full Name:"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/DailyFullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full Name"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="text"
            android:textSize="18sp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Phone No(linked with Aadhar):"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/DailyPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone Number"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="phone"
            android:textSize="18sp">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date Of Birth:"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/DailyDob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="DOB"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="date"
            android:textSize="18sp">
        </EditText>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Age:"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/DailyAge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Age"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="number"
            android:textSize="18sp">
        </EditText>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date"
            android:paddingTop="15dp"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">
        </TextView>

        <EditText
            android:id="@+id/dateformateID"
            android:layout_width="161dp"
            android:layout_height="50dp"
            android:hint="Select Date"
            android:background="@drawable/custom_edittext"
            android:textSize="18sp"
            android:paddingLeft="8dp"
            /> -->
        <Button
            android:id="@+id/DailySubmit"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/app_theme"
            android:textStyle="bold"
            android:textColor="@color/black">
        </Button>

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp">
        </View>








    </LinearLayout>
</ScrollView>